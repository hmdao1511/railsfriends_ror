<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <br>
  <p class="lead">
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Delete', @friend, class: "btn btn-danger", data: { "turbo-method": :delete, 'turbo-confirm': "Are you sure you want to delete this friend?" } %>
    <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  </p>
</div>




